{
  "apiVersion": "rbac.authorization.k8s.io/v1beta1",
  "kind": "ClusterRole",
  "metadata": {
    "name": "kube-oidc-proxy"
  },
  "rules": [
    {
      "apiGroups": [
        ""
      ],
      "resources": [
        "users",
        "groups",
        "serviceaccounts"
      ],
      "verbs": [
        "impersonate"
      ]
    },
    {
      "apiGroups": [
        "authentication.k8s.io"
      ],
      "resources": [
        "userextras/scopes"
      ],
      "verbs": [
        "impersonate"
      ]
    }
  ]
}
